{
  "name": "syntaxhighlighter",
  "version": "4.0.1",
  "type": "module",
  "author": {
    "name": "Alex Gorbatchev",
    "url": "https://github.com/alexgorbatchev"
  },
  "scripts": {
    "build": "node ./build.js",
    "doc": "node ./node_modules/jsdoc/jsdoc.js src -r -d doc -c jsdoc.conf.cjs",
    "lint": "node ./node_modules/eslint/bin/eslint.js --color -c eslintrc.cjs src/**/*.js test/**/*.js src/languages/**/*.js src/utilities/**/*.js",
    "unittest": "node ./node_modules/karma/bin/karma start karma.conf.cjs --single-run",
    "watch-test": "node ./node_modules/karma/bin/karma start karma.conf.cjs --watch",
    "coverage": "node ./node_modules/karma/bin/karma start karma.conf.cjs coverage --single-run",
    "test": "npm run lint && npm run unittest",
    "prepare": "npm run build -- --npm"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/virtualcodewarrior/syntaxhighlighter.git"
  },
  "files": [
    "source",
    "dist"
  ],
  "devDependencies": {
    "babel-minify": "^0.5.1",
    "eslint": "^7.29.0",
    "eslint-plugin-jasmine": "^4.1.2",
    "fs-extra": "^10.0.0",
    "jsdoc": "^3.6.7",
    "karma": "^6.3.4",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.3",
    "karma-firefox-launcher": "^2.1.1",
    "karma-jasmine": "^4.0.1",
    "karma-jasmine-es6": "0.0.3",
    "karma-jasmine-html-reporter": "^1.6.0",
    "karma-spec-reporter": "0.0.32",
    "walk": "^2.3.14"
  },
  "dependencies": {
    "web-component-base-class": "^1.0.1"
  },
  "license": "MIT"
}
